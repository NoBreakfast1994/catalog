<!DOCTYPE html>
<html>
  <head>
    <title>Catalog</title>
    <meta content="initial-scale=1, width=device-width" name="viewport" />
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= vite_client_tag %>
    <%= vite_javascript_tag 'application' %>
    <%= vite_stylesheet_tag 'application.css' %>
  </head>
  <body>
    <% if alert.present? %>
      <p class="alert"><%= alert %></p>
    <% end %>
    <% if notice.present? %>
      <p class="notice"><%= notice %></p>
    <% end %>
    <%= yield %>
  </body>
</html>
